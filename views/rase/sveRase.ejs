<!DOCTYPE html>
<html>
<head>
  <title>KODA || Dog shop</title>
  <link rel="stylesheet" href="/stylesheets/sveRase.css">
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" />
  <meta name="viewport" content="width=device-width, initial-scale=1"/>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

</head>
<body>


<section id="header">
  <a href="/" class="logo"><img src="/images/logo.png" style="width: 65px; height: 65px"></a>
  <div>
    <ul id="navbar" >
      <li><a href="/">Početna stranica</a></li>
      <li ><a href="/proizvodi">Psi u ponudi</a></li>
<!--      <li><a href="/blog">Blog</a></li>-->
      <li><a href="rase/sveRase" class="active">Rase</a></li>
      <li><a href="/about">O nama</a></li>
      <li><a href="/kontakt">Kontakt</a></li>
      <li><a href="/trgovac/login">Prijavi se</a></li>
      <li href="#" id="close">Back</li>
    </ul>
  </div>
  <div id="mobile">
    <i id="bar" class="fas fa-outdent" ></i>
  </div>
</section>





<section id="izdvojeno">
  <div >
    <h2>Preporučene rase za vas</h2>
    <div class="artikl-container" >
      <%for(let i=0; i<raseSort.length; i++){%>
      <div class="artikl" onclick="window.location.href = '/rase/rasa/<%=raseSort[i].id_rase%>'">
        <%if(raseSort[i].slika === ''){%>
          <img src="/images/laptops_product_page.jpg">
        <%}else{%>
        <img src="/images/<%=raseSort[i].slika%>" >
        <%}%>
        <div class="opis">
          <span>Težina: <%=raseSort[i].tezina%></span>
          <h5>Visina: <%=raseSort[i].visina%></h5>
          <h4><%=raseSort[i].ime%></h4>
          <span>Životni vijek: <%=raseSort[i].zivotni_vijek%></span>
        </div>
      </div>
      <%}%>
    </div>
  </div>
</section>





<footer>
  <div class="col">
    <a class="logo"><%=footer.name%></a>
  </div>
  <div class="kontakt"><h4>Kontakt</h4>
    <p>Email: <%= footer.email%></p>
    <p>Mob: <%= footer.tel%></p></div>
  <div class="copyright">
    <p>Ⓒ 2022, Adi Saljic - DOG SHOP KODA</p>
  </div>
</footer>

<script>
  const bar = document.getElementById('bar');
  const nav = document.getElementById('navbar');
  const close = document.getElementById('close');

  if(bar){
    bar.addEventListener('click', () => {
      nav.classList.add('active');
    })
  }

  if(close){
    close.addEventListener('click', () => {
      nav.classList.remove('active');
    })
  }


</script>




</body>
</html>
