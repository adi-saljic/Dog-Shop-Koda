<!DOCTYPE html>
<html>
<head>
  <title>KODA || Dog shop</title>
  <link rel="stylesheet" href="/stylesheets/home.css">
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" />
  <meta name="viewport" content="width=device-width, initial-scale=1"/>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

  <script>
    function deleteMessage(x){
      console.log(x);
      $.ajax({
        url:"/admin/deleteMess/"+x,
        type:"POST",
      })
    }
  </script>

</head>
<body>


<section id="header">
  <a href="#" class="logo"><img src="/images/logo.png" style="width: 65px; height: 65px"></a>
  <div>
    <ul id="navbar" >
      <li><a class="active" href="#">Home</a></li>
      <li ><a href="#trgovci">Trgovci</a></li>
      <li><a href="#poruke">Poruke</a></li>
      <li><a href="/admin/logout">Odjavi se</a></li>
      <li href="#" id="close">Back</li>
    </ul>
  </div>
  <div id="mobile">
    <i id="bar" class="fas fa-outdent" ></i>
  </div>
</section>
<br><br>

<section id="trgovci">
  <h2>Trgovci</h2>
  <table class="table">
    <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Ime uzgajivacnice</th>
      <th scope="col">Ime i prezime</th>
      <th scope="col">Drzava</th>
      <th scope="col">Grad</th>
    </tr>
    </thead>
    <tbody>
    <%for(let i = 0; i < trgovci.length; i++){%>
    <tr onclick="window.location.href = '/admin/prikazTrgovca/<%=trgovci[i].id%>'">
      <th scope="row"><%=i+1%></th>
      <td><%=trgovci[i].ime_uzgajivacnice%></td>
      <td><%=trgovci[i].ime + " " + trgovci[i].prezime%></td>
      <td><%=trgovci[i].drzava%></td>
      <td><%=trgovci[i].grad%></td>
      <td>Vise...</td>
    </tr>
    <%}%>
    </tbody>
  </table>

</section>

<br><br>

<section id="poruke">
  <h2>Poruke</h2>
  <table class="table">
    <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Naslov</th>
      <th scope="col">Tekst</th>
      <th scope="col">Email posiljaoca</th>
    </tr>
    </thead>
    <tbody>
    <%for(let i = 0; i < poruke.length; i++){%>
    <tr>
      <th scope="row"><%=i+1%></th>
      <td><%=poruke[i].naslov%></td>
      <td><%=poruke[i].tekst%></td>
      <td><%=poruke[i].mail%></td>
      <td><button type="button" class="btn btn-danger" onclick="deleteMessage(<%=poruke[i].id_poruke%>)">Izbrisi</button></td>
    </tr>
    <%}%>
    </tbody>
  </table>

</section>



<script>
  const bar = document.getElementById('bar');
  const nav = document.getElementById('navbar');
  const close = document.getElementById('close');

  if(bar){
    bar.addEventListener('click', () => {
      nav.classList.add('active');
    })
  }

  if(close){
    close.addEventListener('click', () => {
      nav.classList.remove('active');
    })
  }


</script>




</body>
</html>
