<!DOCTYPE html>
<html>
<head>
    <title>KODA || Dog shop</title>
    <link rel="stylesheet" href="/stylesheets/proizvodi.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" />
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

</head>
<body>


<section id="header">
    <a href="#" class="logo"><img src="/images/logo.png" style="width: 65px; height: 65px"></a>
    <div>
        <ul id="navbar" >
            <li><a href="/">Početna stranica</a></li>
            <li><a class="active" href="#">Psi u ponudi</a></li>
<!--            <li><a href="/blog">Blog</a></li>-->
            <li><a href="rase/sveRase">Rase</a></li>
            <li><a href="/about">O nama</a></li>
            <li><a href="/kontakt">Kontakt</a></li>
            <li><a href="/trgovac/login">Prijavi se</a></li>
            <li href="#" id="close">Back</li>
        </ul>
    </div>
    <div id="mobile">
        <i id="bar" class="fas fa-outdent" ></i>
    </div>
</section>



<section id="hero">


</section>

<section id="sort">
    <form method="post" action="/proizvodi">
        <div id="form-wrapper">
            <div class="input">
                <span class="details">Drzavi: </span>
                <select name="drzava">
                    <option></option>
                    <option>Bosna i Hercegovina</option>
                    <option>Hrvatska</option>
                    <option>Srbija</option>
                    <option>Crna Gora</option>
                    <option>Slovenija</option>
                    <option>Kosovo</option>
                    <option>Makedonija</option>
                </select>
            </div>
            <div class="input">
                <span class="details">Cijeni: </span>
                <select name="cijena">
                    <option></option>
                    <option>Usvajanje</option>
                    <option>do 300KM</option>
                    <option>300 do 500KM</option>
                    <option>500 do 1000KM</option>
                    <option>1000 do 3000KM</option>
                    <option> preko 3000KM</option>
                </select>
            </div>
            <div class="input">
                <span class="details">Rasi</span>
                <select name="rasa">
                    <option></option>
                    <%for(let i = 0; i<rase.length; i++){%>
                    <option value=<%=rase[i].ime%>><%=rase[i].ime%></option>
                    <%}%>
                </select>
            </div>
            <div class="button">
                <input type="submit" value="Spasi">
            </div>
        </div>
    </form>

</section>

<section id="izdvojeno">
    <h2>Proizvodi</h2>

    <div class="artikl-container" >
        <%for(let i=0; i<psi.length; i++){%>
        <div class="artikl" onclick="window.location.href = '/opisPsa/<%=psi[i].id_psa%>'">
            <%if(psi[i].slika === null){%>
                <img src="/images/laptops_product_page.jpg">
            <%}else{%>
            <img src="/images/<%=psi[i].slika%>" >
            <%}%>
            <div class="opis">
                <span>Ime uzgajivacnice: <%=psi[i].ime_uzgajivacnice%></span>
                <h5>Naziv rase: <%=psi[i].rasa%></h5>
                <h4><%=psi[i].cijena%> KM</h4>
                <span><%=psi[i].grad%></span>
            </div>

        </div>
        <%}%>
    </div>

</section>





<footer>
  <div class="col">
    <a class="logo"><%=footer.name%></a>
  </div>
  <div class="kontakt"><h4>Kontakt</h4>
    <p>Email: <%= footer.email%></p>
    <p>Mob: <%= footer.tel%></p></div>
  <div class="copyright">
    <p>Ⓒ 2022, Adi Saljic - DOG SHOP KODA</p>
  </div>
</footer>

<script>
    const bar = document.getElementById('bar');
    const nav = document.getElementById('navbar');
    const close = document.getElementById('close');

    if(bar){
        bar.addEventListener('click', () => {
            nav.classList.add('active');
        })
    }

    if(close){
        close.addEventListener('click', () => {
            nav.classList.remove('active');
        })
    }


</script>




</body>
</html>
