<!DOCTYPE html>
<html>
<head>
  <title>KODA || Dog shop</title>
  <link rel="stylesheet" href="/stylesheets/opisPsa.css">
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" />
  <meta name="viewport" content="width=device-width, initial-scale=1"/>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

</head>
<body>


<section id="header">
  <a href="/" class="logo"><img src="/images/logo.png" style="width: 65px; height: 65px"></a>
  <div>
    <ul id="navbar" >
      <li><a href="/" >Početna stranica</a></li>
      <li ><a href="/proizvodi">Psi u ponudi</a></li>
<!--      <li><a href="/blog">Blog</a></li>-->
      <li><a href="/rase/sveRase">Rase</a></li>
      <li><a href="/about">O nama</a></li>
      <li><a href="/kontakt">Kontakt</a></li>
      <li><a href="/trgovac/login">Prijavi se</a></li>
      <li href="#" id="close">Back</li>
    </ul>
  </div>
  <div id="mobile">
    <i id="bar" class="fas fa-outdent" ></i>
  </div>
</section>


<section id="detalji">
<div class="single-pro-image">
  <%if(pas.slika === null){%>
    <img src="/images/laptops_product_page.jpg" width="100%" id="glavnaSlika">
  <%}else{%>
  <img src="/images/<%=pas.slika%>" width="100%" id="glavnaSlika">
  <%}%>


</div>
  <div class="single-pro-details">
    <div class="opispsa"><h2>Rasa: <%=pas.rasa%></h2>
    <h2>Cijena: <%=pas.cijena%> KM</h2>
    
    <br>
    <h5>Spol: <%=pas.spol%></h5>
    <h5>Lokacija: <%=pas.grad%> / <%=pas.drzava%></h5>
    <br>
    <h3>Detaljan opis psa:</h3>
    <p><%=pas.opis%></p>
    <br>
    <br>
      <%if(pas.mjesanac !== ''){%>  <span>Pas je mješanac sljedećih rasa: <%=pas.mjesanac%> </span> <%}%>
      <a href="/opisTrgovca/<%=pas.id_uzgajivaca%>">Pogledaj više o trgovcu</a>
    </div>
  </div>
</section>

<section id="izdvojeno">
  <h2>Izdvojeni psi</h2>
  <div class="artikl-container" >
    <%let n = 8;
    if(izdvojeni.length < 8){
      n = izdvojeni.length
    }
    for(let i=0; i<n ;i++){%>
    <div class="artikl" onclick="window.location.href = '/opisPsa/<%=izdvojeni[i].id_psa%>'">
      <%if(izdvojeni[i].slika === null){%>
        <img src="/images/laptops_product_page.jpg">
      <%}else{%>
      <img src="/images/<%=izdvojeni[i].slika%>" >
      <%}%>
      <div class="opis">
        <span>Ime uzgajivacnice: <%=izdvojeni[i].ime_uzgajivacnice%></span>
        <h5>Naziv rase: <%=izdvojeni[i].rasa%></h5>
        <h4><%=izdvojeni[i].cijena%> KM</h4>
        <span><%=izdvojeni[i].grad%></span>
      </div>
    </div>
    <%}%>
  </div>
</section>


<footer>
  <div class="col">
    <a class="logo"><%=footer.name%></a>
  </div>
  <div class="kontakt"><h4>Kontakt</h4>
    <p>Email: <%= footer.email%></p>
    <p>Mob: <%= footer.tel%></p></div>
  <div class="copyright">
    <p>Ⓒ 2022, Adi Saljic - DOG SHOP KODA</p>
  </div>
</footer>

<script>
  const bar = document.getElementById('bar');
  const nav = document.getElementById('navbar');
  const close = document.getElementById('close');

  if(bar){
    bar.addEventListener('click', () => {
      nav.classList.add('active');
    })
  }

  if(close){
    close.addEventListener('click', () => {
      nav.classList.remove('active');
    })
  }


</script>




</body>
</html>
